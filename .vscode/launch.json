{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Make and Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/labelGen.out",
            "args": ["-n", "-t", "M3", "-s", "AB"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Make",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}